	    	select seq_migu_user_role.nextVal from dual
	  </selectKey>
    insert into t_migu_user_role
    <trim prefix="(" suffix=")" suffixOverrides="," >
      <if test="userRoleId != null" >
        USER_ROLE_ID,
      </if>
      <if test="userId != null" >
        USER_ID,
      </if>
      <if test="roleId != null" >
        ROLE_ID,
      </if>
      
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides="," >
