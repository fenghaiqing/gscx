    <result column="ROLE_ID" property="roleId" jdbcType="DECIMAL" />
  </resultMap>
 
  <sql id="Base_Column_List" >
    USER_ROLE_ID, USER_ID, ROLE_ID
  </sql>
 
  <select id="queryUserRoleDataByUserId" resultType="java.lang.String" parameterType="java.lang.String" >    
    select
    ROLE_ID
    from T_MIGU_USER_ROLE WHERE USER_ID = #{userId,jdbcType=VARCHAR}   
  </select>
  
  <select id="queryUsedUserRoleByRoleId" resultType="java.lang.Integer" >
    select count(*) from T_MIGU_USER_ROLE where ROLE_ID = #{0}
  </select>
  
  <!-- 删除用户已有角色 -->
  <delete id="deleteUserRole" >
  		delete from t_migu_user_role where USER_ID = #{userId}
  </delete>
  
  <delete id="deleteRoleById" parameterType="java.util.List" >
    delete from t_migu_user_role
    where USER_ID in
    <foreach collection="array" item = "userId" open="(" separator="," close=")">
  		#{userId}  
    </foreach>
  </delete>
 
